<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/corPrimaria2</item>
        <item name="colorPrimaryDark">@color/branco</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InputStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/biennale</item>
        <item name="android:layout_width">296dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/corPrimaria2</item>
        <item name="android:textSize">14dp</item>
        <item name="android:backgroundTint">@color/corPrimaria2</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/biennale</item>
        <item name="android:layout_width">296dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/corPrimaria2</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="textAllCaps">false</item>
    </style>

<!--    Header-->
    <style name="HeaderStyle" >
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="HeaderLogoStyle" >
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">123dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
    </style>

    <style name="HeaderInputPesquisarStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:fontFamily">@font/biennale</item>
        <item name="android:layout_width">189dp</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:textColor">@color/corPrimaria2</item>
        <item name="android:textSize">14dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="HeaderVoltarStyle" >
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
    </style>

    <style name="HeaderLogoutStyle" >
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
    </style>


<!--   Footer-->

    <style name="FooterStyle" >
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal">30dp</item>
    </style>

    <style name="FooterIconesStyle" >
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
    </style>

<!--    Feed-->

    <style name="FeedHeaderStyle">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <style name="FeedAvatarHeaderStyle">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>
    </style>

    <style name="FeedConteudoStyle">
        <item name="android:layout_height">360dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="FeedImagemStyle">
        <item name="android:layout_height">360dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="FeedInteracoesStyle">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <style name="FeedInteracoesIconesStyle">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
    </style>

    <style name="FeedDescricaoStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <style name="FeedContainerComentarioInputStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

    <style name="FeedComentarioInputStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/biennale</item>
        <item name="android:layout_width">296dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/corPrimaria2</item>
        <item name="android:textSize">12dp</item>
        <item name="android:backgroundTint">@color/branco</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="FeedComentarioStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <!--    Perfil-->

    <style name="PerfilHeaderStyle">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginVertical">16dp</item>
    </style>

    <style name="PerfilAvatarHeaderStyle">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
    </style>

    <style name="PerfilContainerInfosStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="PerfilInfoStyle">
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginHorizontal">10dp</item>
    </style>

    <style name="PerfilButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/biennale</item>
        <item name="android:layout_width">216dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:background">@color/corPrimaria2</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">12dp</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="PerfilButtonOutlineStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/biennale</item>
        <item name="android:layout_width">216dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:background">@drawable/botao_perfil_background</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">12dp</item>
        <item name="textAllCaps">false</item>
    </style>


<!--    Editar perfil-->
    <style name="EditarPerfilInputNomeStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/biennale</item>
        <item name="android:layout_width">match_parent</item>
